<%= form_for @inventario, :html => { :class => "form-horizontal inventario" } do |f| %>

    <% if @inventario.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@inventario.errors.count, "error") %> prohibited this inventario from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @inventario.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :pieza, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :pieza, :class => 'form-control' %>
    </div>
    <%= error_span(@inventario[:pieza]) %>
  </div>
  <div class="control-group">
    <%= f.label :Disponible, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :Disponible, :class => 'form-control' %>
    </div>
    <%= error_span(@inventario[:Disponible]) %>
  </div>
  <div class="control-group">
    <%= f.label :Usada, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :Usada, :class => 'form-control' %>
    </div>
    <%= error_span(@inventario[:Usada]) %>
  </div>
  <div class="control-group">
    <%= f.label :Entrada, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :Entrada, :class => 'form-control' %>
    </div>
    <%= error_span(@inventario[:Entrada]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            inventarios_path, :class => 'btn btn-default' %>

<% end %>
